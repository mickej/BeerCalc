doctype
html
  head
    title #{title} - My Site
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    script(type='text/javascript' src='http://code.jquery.com/jquery.min.js')
    script(type='text/javascript' src='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='/js/app.js')
  body
    header
      h1#title 0.00
    .container
      form.form-horizontal(name="calc" action="/calc", method="get", id="calcform", role="form")
        div.form-group
          label.control-label.col-sm-2(for="volume") Volume (Liters)
          div.col-sm-10
            input.form-control(type="text", name="volume", id="volume")
        div.form-group
          label.control-label.col-sm-2(for="org") Worth OG
          div.col-sm-10
            input.form-control(type="text", name="og", id="og")
        div.form-group.input_fields_wrap
          div.hop
            div.col-sm-offset-2.col-sm-2
              input.form-control(type="text", name="weighthops", id="weighthops" placeholder="Hops weight")
            div.col-sm-2
              input.form-control(type="text", name="acid", id="acid" placeholder="Alpha Acid (%)")
            div.col-sm-2
              input.form-control(type="text", name="boiltime", id="boiltime" placeholder="Boil time minutes")
            div.col-sm-1
              button.btn.btn-default.glyphicon.glyphicon-remove.remove_field
            div.col-sm-3
              p.lead.pull-right.result
        div.form-group
          div.col-sm-offset-2.col-sm-10
            button.btn.btn-default.add_field_button() Add
